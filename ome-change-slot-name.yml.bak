---
- hosts: ome
  connection: local
  name: Dell OpenManage Ansible User service.
  gather_facts: False 
  vars_files:
          - ome-secret.yml

  collections:
    - dellemc.openmanage
      
  tasks:
    - name: Retrieve basic inventory of all devices.
      ome_device_info:
        hostname: "{{ ome_endpoint }}"
        username: "{{ ome_user }}"
        password: "{{ ome_pass }}"
      register: all_devices

    - name: set chassis 1
      set_fact:
        chassis_1: "{{ all_devices.device_info.value | json_query(query)  |  regex_replace('\\[|\\]|\\'','')}}"
      vars:
        query: "[?DeviceManagement[0].NetworkAddress==`192.168.1.10`].DeviceServiceTag"  

    - name: set chassis 2
      set_fact:
        chassis_2: '{{ all_devices.device_info.value | json_query(query) }}'
      vars:
        query: "[?DeviceManagement[0].NetworkAddress==`192.168.1.20`].DeviceServiceTag"


    - name: show service tags
      debug:
         msg: 
         - "chassis 1 service {{ chassis_1 }}" 
         - "chassis 2 service {{ chassis_2 }}"

    - name: Rename the slots in multiple chassis using slot number and chassis service tag.
      ome_chassis_slots:
        hostname: "{{ ome_endpoint }}"
        username: "{{ ome_user }}"
        password: "{{ ome_pass }}"
        slot_options:
          - chassis_service_tag: "{{ chassis_1 }}"
            slots:
              - slot_number: 1
                slot_name: sled_name_1
              - slot_number: 2
                slot_name: sled_name_2

          - chassis_service_tag: "{{ chassis_2 }}"
            slots:
              - slot_number: 1
                slot_name: sled_name_1
              - slot_number: 2
                slot_name: sled_name_2
